<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_radio_status"
    android:elevation="8dp"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_radio_status"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ic_play_circle"
        app:layout_constraintBottom_toBottomOf="@+id/txt_radio_name"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_radio_name" />

    <TextView
        android:id="@+id/txt_radio_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:padding="4dp"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/img_radio_status"
        app:layout_constraintRight_toLeftOf="@+id/txt_radio_signal"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_radio_signal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="@+id/txt_radio_name"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="100.0 FM" />

</androidx.constraintlayout.widget.ConstraintLayout>